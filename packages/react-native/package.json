		"@sf-digital-ui/tokens": "*",
		"@types/react": "^18.3.12",
		"@types/react-native": "^0.72.0",
		"chokidar-cli": "^3.0.0",
		"react": "^18.3.1",
		"react-native": "^0.76.1",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"expo-checkbox": "^4.0.1"
	}
}
