{
	"name": "@sf-digital-ui/react-native",
	"version": "2.2.1",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"license": "MIT",
	"scripts": {
		"build": "tsup src/index.tsx --format esm,cjs --dts",
